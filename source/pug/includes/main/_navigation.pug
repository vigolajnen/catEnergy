include ../../mixins/svg_icon.pug
include ../../mixins/picture.pug

nav.navigation(class=(url == 'index' ? 'navigation--promo' : ''))
  .navigation__header
    a.navigation__logo(href="#")
      //- img(src="img/logo/logo-adaptive.svg", alt="Логотип компании" width="202" height="59")
      +picture({
        list: [
          {
            media: "(min-width: 1200px)",
            srcset: "img/logo/logo.svg"
          },
          {
            media: "(min-width: 768px)",
            srcset: "img/logo/logo-tablet.svg"
          },

        ],
        src: "img/logo/logo-mobile.svg",
        alt: "Логотип компании",
        width: "35",
        height: "38"
      })
    +svg_icon(("../img/sprite.svg"), "icon-logo-text", "101", "18").navigation__logo-text
    button(class="navigation__toggle navigation__toggle--closed" type="button" aria-label="Открыть меню")
      svg(class="navigation__icon" width="25" viewbox="0 0 10 10")
        rect(class="navigation__line navigation__line--1" width="10" height="1" x="0" y="0")
        rect(class="navigation__line navigation__line--2" width="10" height="1" x="0" y="3")
        rect(class="navigation__line navigation__line--3" width="10" height="1" x="0" y="6")
  ul.navigation__list
    - var itemActive = true;
    each value, index in { 'Главная': 'index', 'Каталог продукции': 'catalog', 'Подбор программы': 'form'}
      li.navigation__item(class=(url == value ? 'navigation__item--active' : ''))
        a.navigation__link(href= "/" + value + ".html")= index
